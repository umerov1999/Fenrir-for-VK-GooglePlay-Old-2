<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/edit_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="8dp"
            android:text="@string/rotating_player_cover"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_rotation_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <SeekBar
            android:id="@+id/edit_rotation_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="25"
            android:progress="8" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <SeekBar
            android:id="@+id/edit_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="4" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/edit_invert_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="8dp"
            android:text="@string/invert_rotating"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <include layout="@layout/line_divider" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <SeekBar
            android:id="@+id/edit_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="25"
            android:progress="16" />
    </LinearLayout>
</ScrollView>