<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <dev.ragnarok.fenrir.view.FlingRelativeLayout
        android:id="@+id/fling_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <dev.ragnarok.fenrir.view.AlternativeAspectRatioFrameLayout
            android:id="@+id/aspect_ratio_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <SurfaceView
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </dev.ragnarok.fenrir.view.AlternativeAspectRatioFrameLayout>


    </dev.ragnarok.fenrir.view.FlingRelativeLayout>


    <dev.ragnarok.fenrir.view.natives.rlottie.RLottieImageView
        android:id="@+id/preparing_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:loopAnimation="true" />

</RelativeLayout>
